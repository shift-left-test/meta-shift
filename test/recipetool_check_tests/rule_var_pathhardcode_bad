#!/bin/sh
TMP="$1/"
TOOL="recipetool check"
TESTFILE="${TMP}oelint_adv_test.bb"
trap "rm -f ${TESTFILE}" EXIT
TESTID="oelint.vars.pathhardcode.*"
TESTOCC="22"
cat > ${TESTFILE} << EOF
VAR = "/usr/lib/systemd/user"
VAR = "/lib/systemd/system"
VAR = "/usr/share/doc"
VAR = "/usr/share/info"
VAR = "/usr/share/man"
VAR = "/usr/libexec"
VAR = "/lib/systemd"
VAR = "/usr/lib"
VAR = "/usr/bin"
VAR = "/usr/share"
VAR = "/usr/include"
VAR = "/var"
VAR = "/lib"
VAR = "/usr/lib"
VAR = "/usr/include"
VAR = "/usr/sbin"
VAR = "/srv"
VAR = "/com"
VAR = "/etc"
VAR = "/etc/ajjsjj"
VAR = "/usr/bin*"
VAR = "\${D}/usr/bin"
VAR = "/foo/bar/usr/bin"
EOF
[ $(${TOOL} ${TESTFILE} 2>&1 | grep ":${TESTID}:" | wc -l) -ge "${TESTOCC}" ] && exit 0;
${TOOL} ${TESTFILE} 2>&1
_got=$(${TOOL} ${TESTFILE} 2>&1 | grep ":${TESTID}:" | wc -l)
echo "Test for ${0} failed - got ${_got} expected ${TESTOCC}"
exit 1