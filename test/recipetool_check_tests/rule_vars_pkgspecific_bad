#!/bin/sh
TMP="$(dirname $(mktemp -u))/"
TOOL="recipetool check"
TESTFILE="${TMP}oelint_adv_test.bb"
trap "rm -f ${TESTFILE}" EXIT
TESTID="oelint.vars.pkgspecific.*"
TESTOCC="12"
cat > ${TESTFILE} << EOF
RDEPENDS = "foo"
RRECOMMENDS = "foo"
RSUGGESTS = "foo"
RCONFLICTS = "foo"
RPROVIDES = "foo"
RREPLACES = "foo"
FILES = "foo"
pkg_preinst = "foo"
pkg_postinst = "foo"
pkg_prerm = "foo"
pkg_postrm = "foo"
ALLOW_EMPTY = "foo"
EOF
[ $(${TOOL} ${TESTFILE} 2>&1 | grep ":${TESTID}:" | wc -l) = "${TESTOCC}" ] && exit 0;
${TOOL} ${TESTFILE} 2>&1
_got=$(${TOOL} ${TESTFILE} 2>&1 | grep ":${TESTID}:" | wc -l)
echo "Test for ${0} failed - got ${_got} expected ${TESTOCC}"
exit 1